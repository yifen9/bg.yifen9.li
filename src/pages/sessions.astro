---
import DataTable from "../components/DataTable.svelte";
import sessions from "../../data/sessions.json";
const columns = [
  { key: "date", label: "Date" },
  { key: "game", label: "Game", link: (r) => `/games/${encodeURIComponent(r.game)}` },
  { key: "session_id", label: "Session", link: (r) => `/sessions/${r.session_id}` },
  { key: "participants", label: "Participants", render: (r) => r.participants.join(", ") }
];
---
<html>
  <head><meta charset="utf-8" /><title>Sessions</title></head>
  <body>
    <h1>Sessions</h1>
    <DataTable client:load {columns} rows={sessions} initialSort={{key:"date",dir:"desc"}} />
  </body>
</html>
