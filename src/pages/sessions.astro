---
import sessions from "../../data/sessions.json";

const rows = sessions;
---
<html>
  <head>
    <meta charset="utf-8" />
    <title>Sessions</title>
  </head>
  <body>
    <h1>Sessions</h1>
    <table>
      <thead>
        <tr><th>Date</th><th>Game</th><th>Session</th><th>Participants</th></tr>
      </thead>
      <tbody>
        {rows.map(r => (
          <tr>
            <td>{r.date}</td>
            <td>{r.game}</td>
            <td>{r.session_id}</td>
            <td>{r.participants.join(", ")}</td>
          </tr>
        ))}
      </tbody>
    </table>
  </body>
</html>
