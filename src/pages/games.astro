---
import DataTable from "../components/DataTable.svelte";
import games from "../../data/games.json";
const columns = [
  { key: "game", label: "Game", link: (r) => `/games/${encodeURIComponent(r.game)}` },
  { key: "avg", label: "Avg" },
  { key: "median", label: "Median" },
  { key: "ratings_count", label: "Ratings" },
  { key: "plays", label: "Plays" },
  { key: "last_played", label: "Last Played" }
];
---
<html>
  <head><meta charset="utf-8" /><title>Games</title></head>
  <body>
    <h1>Games</h1>
    <DataTable client:load {columns} rows={games} initialSort={{key:"last_played",dir:"desc"}} />
  </body>
</html>
