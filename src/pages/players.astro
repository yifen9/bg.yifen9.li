---
import DataTable from "../components/DataTable.svelte";
import ratings from "../../data/elo/ratings.json";
const rows = Array.isArray(ratings) ? ratings : [];
const columns = [
  { key: "player", label: "Player", link: { prefix: "/players/", key: "player" } },
  { key: "rating", label: "Rating" },
  { key: "games_played", label: "Games Played" }
];
const rowLink = { prefix: "/players/", key: "player" };
---
<html>
  <head><meta charset="utf-8" /><title>Players</title></head>
  <body>
    <h1>Players</h1>
    {rows.length
      ? <DataTable client:load {columns} rows={rows} {rowLink} initialSort={{key:"rating",dir:"desc"}} />
      : <p>No players data.</p>}
  </body>
</html>
